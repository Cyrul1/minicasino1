
<!DOCTYPE html>
<html class="dark">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
          <script src="https://cdn.tailwindcss.com"></script>
        <script>
            tailwind.config = {
                darkMode: 'class'
            }
        </script>
    </head>
    <body class="bg-green-200 text-grey-1000 m-10 dark:bg-green-800 dark:text-white">
    <div class="w-full md:w-2/3 mx-auto mb-4 flex justify-between items-center">
        <div class="text-4xl">
            <a href="{{ path('app_casino') }}">Strona główna!</a>
            {% block bread %}
                
            {% endblock %}
        </div>
        <div class="text-right">
        
            <div class=" text-sm text-gray-400 dark:text-gray-300 flex"> 
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <div>
                    <a href="{{ path('app_proflie', {'id': app.user.id}) }}">Profile!</a>
                </div>
                <div class="ml-2">
                   <a href="#">Ustawienia Profilu!</a>
                </div>
                 <div class="ml-2">
                <a href="{{path('app_logout')}}"> Wyloguj się!</a>
                </div>
            {% else %}
                <div>
                <a href="{{ path('app_login') }}"> Login there!</a>
                </div>
                <div class="ml-2">
                <a href="{{ path('app_register') }}"> Register There!</a>
                </div>
            {% endif %}
                
            </div>
        
        </div>

    </div>
    <div class="w-full md:w-2/3 mx-auto">
        {% for message in app.flashes('success') %}
            <div class="rounded-md p-2 border-green-300 bg-green-50 border dark:border-green-600 dark:bg-green-700 dark:text-white mb-4">{{ message }} </div>
        {% endfor %}
        {% block body %}{% endblock %}
    </div>
    </body>
</html>